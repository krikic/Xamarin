<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/sListP1State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_alignParentRight="true"
                android:fontFamily="casual"
                android:textColor="#d9fddf"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sListP1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player1 "
                android:layout_toStartOf="@id/sListP1State"
                android:fontFamily="casual"
                android:textColor="#d9fddf"
                android:textSize="19dp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/sListDummuText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:fontFamily="casual"
            android:text="3:5"
            android:textColor="#d9fddf"
            android:textSize="19dp"
            android:textStyle="bold"/>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/sListP2State"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" "
                android:layout_toEndOf="@id/sListP2Name"
                android:fontFamily="casual"
                android:textColor="#d9fddf"
                android:textSize="19dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/sListP2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player2"
                android:layout_alignParentLeft="true"
                android:fontFamily="casual"
                android:textColor="#d9fddf"
                android:textSize="19dp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>