<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="games.mrlaki5.backgammon">

    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:roundIcon="@mipmap/title"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Menus.MenuActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GameControllers.GameActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Menus.SettingsActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".Menus.ResultsActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".Menus.ScoresActivity"
            android:screenOrientation="landscape"/>
    </application>

</manifest>